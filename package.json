{
  "name": "qa-cyberrank",
  "version": "1.0.0",
  "description": "End-to-end automation tests for CyberRank platform using WebdriverIO",
  "main": "index.js",
  "scripts": {
    "test": "wdio run wdio.conf.js",
    "test:all": "npm run test:pre-login && npm run test:post-login",
    "test:headless": "wdio run wdio.conf.js --headless",
    "test:parallel": "wdio run wdio.conf.js --parallel 2",
    "test:pre-login": "wdio run wdio.conf.js --spec test/specs/pre-login.spec.js",
    "test:post-login": "wdio run wdio.conf.js --spec test/specs/post-login.spec.js",
    "test:pre-login:headless": "wdio run wdio.conf.js --spec test/specs/pre-login.spec.js --headless",
    "test:post-login:headless": "wdio run wdio.conf.js --spec test/specs/post-login.spec.js --headless",
    "test:with-report": "npm run test && npm run report:generate",
    "report": "node scripts/generate-report.js all",
    "report:generate": "node scripts/generate-report.js all",
    "report:allure": "node scripts/generate-report.js allure",
    "report:summary": "node scripts/generate-report.js summary",
    "report:open": "node scripts/generate-report.js open",
    "report:serve": "npx allure serve allure-results",
    "clean": "rimraf allure-results test-results test-reports",
    "setup": "node scripts/run-tests.js help",
    "run": "node scripts/run-tests.js"
  },
  "keywords": [
    "webdriverio",
    "automation",
    "testing",
    "cyberrank"
  ],
  "author": "QA Team",
  "license": "MIT",
  "devDependencies": {
    "@wdio/allure-reporter": "^8.32.5",
    "@wdio/cli": "^8.32.5",
    "@wdio/json-reporter": "^9.18.0",
    "@wdio/junit-reporter": "^9.18.0",
    "@wdio/local-runner": "^8.32.5",
    "@wdio/mocha-framework": "^8.32.5",
    "@wdio/spec-reporter": "^8.32.5",
    "allure-commandline": "^2.24.1",
    "chromedriver": "^138.0.5",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.4.1",
    "mochawesome-report-generator": "^6.2.0",
    "rimraf": "^5.0.10",
    "wdio-chromedriver-service": "^8.0.1"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  }
}
